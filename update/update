# read run configuration
exec<run.ini
while read line
do
	# do not read comments
	if [ `echo | awk '{ print substr("'"$line"'",1,1) }'` != ";" ] ; then
	
		# seperate key and value
		key=`echo "$line" | awk -F"=" '{print $1}'`
		value=`echo "$line" | awk -F"=" '{print $2}'`
		
		# store php path
		if [ $key = "phpPath" ] ; then
			PHP=`echo $value`
		fi
	fi
done

if [ $PHP = "" ] ; then
	PHP=`which php`
fi

$PHP $PWD/update.php